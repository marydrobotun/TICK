dbrp "mybucket"."autogen"

var data = batch
	|query('SELECT available_percent, host FROM "mybucket". "autogen"."mem"')
		.period (5m)
		.every (10s)
	|alert()
    		.message('ðŸš¨ HOST: {{ index .Fields "host" }} |  Memory usage is: {{ index .Fields "available_percent" | printf "%.2f" }}%')
    		.info(lambda: "available_percent" < 80 )
    		.warn(lambda: "available_percent" < 90 )
    		.crit(lambda: "available_percent" > 95)
    		.telegram()
