dbrp "mybucket"."autogen"

var data = batch
	|query('SELECT used_percent, host FROM "mybucket". "autogen"."disk"')
		.period (5m)
		.every (10s)
	|alert()
    		.message('ðŸš¨ HOST: {{ index .Fields "host" }} |  Disk usage is: {{ index .Fields "used_percent" | printf "%.2f" }}%')
    		.info(lambda: "used_percent" < 80 )
    		.warn(lambda: "used_percent" < 90 )
    		.crit(lambda: "used_percent" > 95)
    		.telegram()